<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/notification_big_cover_width"
        android:layout_height="@dimen/notification_big_cover_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/notification_big_cover_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/singer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Compat.Notification"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/previous"
                android:layout_width="@dimen/notification_big_button_size"
                android:layout_height="@dimen/notification_big_button_size"
                android:layout_marginEnd="25dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/notification_previous" />

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="@dimen/notification_big_button_size"
                android:layout_height="@dimen/notification_big_button_size"
                android:layout_marginEnd="25dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/notification_play" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="@dimen/notification_big_button_size"
                android:layout_height="@dimen/notification_big_button_size"
                android:layout_marginEnd="25dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/notification_next" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>